{
  "name": "amazon-polly-voiceover-generation",
  "version": "1.0.0",
  "description": "Web application for generating voiceovers from spreadsheets using Amazon Polly",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "server": "nodemon server/app.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "amazon-polly",
    "text-to-speech",
    "voiceover",
    "spreadsheet",
    "audio-generation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "aws-sdk": "^2.1490.0",
    "xlsx": "^0.18.5",
    "csv-parser": "^3.0.0",
    "uuid": "^9.0.1",
    "fs-extra": "^11.1.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
} 